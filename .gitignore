import time
import os
import random

colors = [
    "\033[91m",  # Red
    "\033[92m",  # Green
    "\033[93m",  # Yellow
    "\033[94m",  # Blue
    "\033[95m",  # Magenta
    "\033[96m",  # Cyan
]

reset = "\033[0m"

while True:
    os.system("clear")  # Screen clear karega
    color = random.choice(colors)
    current_time = time.strftime("%H:%M:%S")
    print(f"{color}âŒš Time: {current_time} {reset}")
    time.sleep(1)
